<div class="container">
    <h2>Size: {{size}}</h2>
    <div class="form">
        <form action="/item/{{itemId}}/addtocart" method="post">
            <label for="quantityInput">Quantity:</label>
            <input name="quantity" id="quantityInput" class="short-input" type="number" placeholder="Enter quantity to add">
            <button type="submit">Add to Cart</button>
        </form>
    </div>
</div>